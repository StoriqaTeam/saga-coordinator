FROM debian:stable-slim

RUN mkdir /app

RUN apt-get update \
    && apt-get install -y ca-certificates \
    && apt-get autoremove -y \
    && apt-get clean -y \
    && rm -rf /var/lib/apt/lists/

COPY target/release/saga_coordinator_runner /app

# Running as user "app"
RUN adduser --disabled-password --gecos "" --home /app --no-create-home -u 5000 app \
  && chown -R app: /app

USER app
WORKDIR /app
EXPOSE 8004

ENTRYPOINT ["/app/saga_coordinator_runner"]
